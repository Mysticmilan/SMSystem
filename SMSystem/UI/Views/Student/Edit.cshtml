@{
}
@model Domin.ViewModels.StudentVM

<div class="d-flex justify-content-between">
    <h2>Edit Student</h2>
    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
</div>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <form asp-action="Edit" method="POST">
                <div class="row">
                    <div class="col-2">
                        <label>Name</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" name="Name" value="@Model.Name">
                    </div>
                </div>

                <div class="row">
                    <div class="col-2">
                        <label>Phone</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" name="Phone" value="@Model.Phone">
                    </div>
                </div>

                <div class="row">
                    <div class="col-2">
                        <label>Email</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" name="Email" value="@Model.Email">
                    </div>
                </div>

                <input class="form-control" Type="hidden" name="Id" value="@Model.Id">
                <div class="row mt-3">
                    <div class="col-2">
                    </div>
                    <div class="col-10">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
